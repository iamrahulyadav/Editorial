<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_vacabulary"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="app.articles.vacabulary.vacabulary.gamefever.vacabulary.VacabularyActivity">

    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="8dp"
        android:id="@+id/vacabulary_activity_listview"
        >


    </ListView>



    <!--layout of bottom sheet for showing word meaning and translation-->
    <RelativeLayout
        android:id="@+id/vacabulary_activity_bottom_sheet"
        android:layout_width="match_parent"
        android:layout_height="360dp"
        android:background="@android:color/holo_orange_light"
        android:clipToPadding="true"
        app:behavior_hideable="true"
        app:behavior_peekHeight="0dp"
        app:layout_behavior="android.support.design.widget.BottomSheetBehavior"

        >


        <TextView
            android:id="@+id/vacabulary_bottomsheet_heading_textview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="hint and dictionary text"
            android:textAlignment="center"
            android:textColor="@color/heading_color"
            android:textSize="30sp" />


        <LinearLayout
            android:id="@+id/vacabulary_bottomsheet_meaning_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/vacabulary_bottomsheet_heading_textview"
            android:orientation="vertical">

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                app:cardBackgroundColor="#e72f5a"
                app:cardCornerRadius="4dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"
                    android:text="Meaning"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="16sp" />

            </android.support.v7.widget.CardView>


            <TextView
                android:id="@+id/vacabulary_bottomsheet_meaning_textview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/vacabulary_bottomsheet_heading_textview"
                android:text="meaning"
                android:textAlignment="center"
                android:textSize="20sp" />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/vacabulary_bottomsheet_synonyms_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/vacabulary_bottomsheet_meaning_layout"
            android:orientation="vertical">

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                app:cardBackgroundColor="#e72f5a"
                app:cardCornerRadius="4dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"
                    android:text="synonyms"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="16sp" />

            </android.support.v7.widget.CardView>


            <TextView
                android:id="@+id/vacabulary_bottomsheet_synonyms_textview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/vacabulary_bottomsheet_heading_textview"
                android:text="synonyms"
                android:textAlignment="center"
                android:textSize="20sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/vacabulary_bottomsheet_synonyms_layout"
            android:id="@+id/vacabulary_bottomsheet_parofspeech_layout"

            android:orientation="vertical">

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                app:cardBackgroundColor="#e72f5a"
                app:cardCornerRadius="4dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"
                    android:text="Part Of speech"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="16sp" />

            </android.support.v7.widget.CardView>


            <TextView
                android:id="@+id/vacabulary_bottomsheet_partspeech_textview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/vacabulary_bottomsheet_heading_textview"
                android:text="part of speech"
                android:textAlignment="center"
                android:textSize="20sp" />
        </LinearLayout>





    </RelativeLayout>




</android.support.design.widget.CoordinatorLayout>
