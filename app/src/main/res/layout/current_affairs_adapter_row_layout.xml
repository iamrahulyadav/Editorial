<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/currentAffairs_background_card"

    android:layout_marginBottom="8dp"
    app:cardElevation="2dp"
    app:cardCornerRadius="0dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/currentAffairs_source_textView"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_marginTop="4dp"
            android:layout_weight="1"
            android:text="source"
            android:textAlignment="center"
            android:textAllCaps="true"
            android:textColor="?attr/colorAccent"
            android:textSize="12sp"
            android:typeface="monospace" />

        <TextView
            android:id="@+id/currentAffairs_heading_textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:layout_marginTop="0dp"
            android:text="This is heading text for demo purpose and testing layout"
            android:textColor="?attr/primaryTextColor"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/currentAffairs_subheading_textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:layout_marginTop="4dp"
            android:text="This is sub heading text for list view this text is shown by android textview is it looking goog or not"
            android:textColor="?attr/secondaryTextColor"
            android:textSize="12sp" />



        <TextView
            android:id="@+id/currentAffairs_date_textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:layout_marginTop="8sp"
            android:text="12-03-2018"
            android:textColor="?attr/secondaryTextColor"
            android:textSize="10sp" />


        <ImageView
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="?attr/colorPrimaryDark">

        </ImageView>

    </LinearLayout>

    <ImageView
        android:id="@+id/currentAffairs_isReadMask_imageView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="?attr/readMaskColor"
        android:visibility="gone" />

</android.support.v7.widget.CardView>