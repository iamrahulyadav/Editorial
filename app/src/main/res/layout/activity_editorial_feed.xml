<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_editorial_feed"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="app.articles.vacabulary.editorial.gamefever.editorial.EditorialFeedActivity">

 <LinearLayout
     android:layout_width="match_parent"
     android:layout_height="match_parent"
     android:orientation="vertical">


     <android.support.design.widget.AppBarLayout
         android:layout_width="match_parent"
         android:layout_height="wrap_content"

         android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

         <android.support.v7.widget.Toolbar
             android:id="@+id/editorialfeed_activity_toolbar"
             android:layout_width="match_parent"
             android:layout_height="?attr/actionBarSize"
             android:background="?attr/colorPrimary"
             app:layout_scrollFlags="scroll|enterAlways"
             app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />


     </android.support.design.widget.AppBarLayout>



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">




        <!-- layout of bottom  translation cardview  -->
        <android.support.v7.widget.CardView
            android:id="@+id/editorial_feed_cardview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            app:cardBackgroundColor="@color/colorPrimary"
            app:cardCornerRadius="0dp"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:background="@android:drawable/ic_lock_silent_mode_off" />

                <TextView
                    android:id="@+id/editorial_feed_cardview_textview"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:onClick="onDictionaryClick"
                    android:text="Tap on Word"
                    android:textAlignment="center"
                    android:textColor="#ffffff"
                    android:textSize="24sp" />


            </LinearLayout>


        </android.support.v7.widget.CardView>

        <!-- layout of full activity heading + source + date + texts textview included-->
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@id/editorial_feed_cardview"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">


                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardBackgroundColor="@color/editorialFeedHeadingBGColor"
                    app:cardCornerRadius="0dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/editorial_heading_textview"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Heading text is shown here inh this textview do you get this"
                            android:textAlignment="center"
                            android:textAllCaps="true"
                            android:textColor="@color/white"
                            android:textSize="25sp"


                            />


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <android.support.v7.widget.CardView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="8dp"
                                app:cardBackgroundColor="#e72f5a"
                                app:cardCornerRadius="4dp">


                            </android.support.v7.widget.CardView>

                            <TextView
                                android:id="@+id/editorial_source_textview"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="8dp"
                                android:layout_weight="1"
                                android:text="Source NAme"
                                android:textColor="@color/white"
                                android:textAlignment="center"
                                android:textSize="16sp"
                                android:textStyle="italic" />

                            <TextView
                                android:id="@+id/editorial_date_textview"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Date"
                                android:textColor="@color/white"
                                android:textAlignment="center"
                                android:textSize="16sp"
                                android:layout_margin="8dp"

                                android:textStyle="italic" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1" />

                            <android.support.v7.widget.CardView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:cardBackgroundColor="#ff1852"
                                app:cardCornerRadius="4dp"
                                android:layout_marginBottom="8dp"
                                android:layout_marginRight="6dp"

                                >

                            </android.support.v7.widget.CardView>
                            <TextView
                                android:id="@+id/editorial_tag_textview"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="4dp"
                                android:text="Tag"
                                android:textSize="20sp"
                                android:textColor="@color/editorialListTagColor" />


                        </LinearLayout>


                    </LinearLayout>


                </android.support.v7.widget.CardView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">




                </LinearLayout>


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:text="----------------------------------------------------------------------------------------------------"
                    android:textAlignment="center" />


                <TextView
                    android:id="@+id/editorial_text_textview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:layout_margin="8dp"
                    android:text=""
                    android:textColor="@color/heading_color"
                    android:textColorLink="@color/heading_color"
                    android:textSize="20sp" />
                <ProgressBar
                    style="?android:attr/progressBarStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/editorialfeed_activity_progressbar"
                    android:layout_marginBottom="25dp"
                    />




            </LinearLayout>

        </ScrollView>

    </RelativeLayout>

 </LinearLayout>

    <!--layout of bottom sheet for showing word meaning and translation-->
    <RelativeLayout
        android:id="@+id/editorial_activity_bottom_sheet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/holo_orange_light"
        android:clipToPadding="true"
        app:behavior_hideable="true"
        app:behavior_peekHeight="0dp"
        app:layout_behavior="android.support.design.widget.BottomSheetBehavior"

        >


        <TextView
            android:id="@+id/editorial_bottomsheet_heading_textview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="hint and dictionary text"
            android:textAlignment="center"
            android:textColor="@color/heading_color"
            android:textSize="30sp" />


        <LinearLayout
            android:id="@+id/editorial_bottomsheet_meaning_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/editorial_bottomsheet_heading_textview"
            android:orientation="vertical">

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                app:cardBackgroundColor="#e72f5a"
                app:cardCornerRadius="4dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"
                    android:text="Meaning"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="16sp" />

            </android.support.v7.widget.CardView>


            <TextView
                android:id="@+id/editorial_bottomsheet_meaning_textview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/editorial_bottomsheet_heading_textview"
                android:text="meaning"
                android:textAlignment="center"
                android:textSize="20sp" />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/editorial_bottomsheet_synonyms_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/editorial_bottomsheet_meaning_layout"
            android:orientation="vertical">

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                app:cardBackgroundColor="#e72f5a"
                app:cardCornerRadius="4dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"
                    android:text="synonyms"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="16sp" />

            </android.support.v7.widget.CardView>


            <TextView
                android:id="@+id/editorial_bottomsheet_synonyms_textview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/editorial_bottomsheet_heading_textview"
                android:text="synonyms"
                android:textAlignment="center"
                android:textSize="20sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/editorial_bottomsheet_parofspeech_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/editorial_bottomsheet_synonyms_layout"

            android:orientation="vertical">

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                app:cardBackgroundColor="#e72f5a"
                app:cardCornerRadius="4dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"
                    android:text="Part Of speech"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="16sp" />

            </android.support.v7.widget.CardView>


            <TextView
                android:id="@+id/editorial_bottomsheet_partspeech_textview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/editorial_bottomsheet_heading_textview"
                android:text="part of speech"
                android:textAlignment="center"
                android:textSize="20sp" />
        </LinearLayout>

        <Button
            android:id="@+id/editorial_bottomSheet_add_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/editorial_bottomsheet_parofspeech_layout"
            android:background="@color/white"
            android:text="ADD To Vocabulary" />


    </RelativeLayout>


</android.support.design.widget.CoordinatorLayout>
