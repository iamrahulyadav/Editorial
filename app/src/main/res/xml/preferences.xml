<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <ListPreference
        android:defaultValue="Day"
        android:entries="@array/pref_theme_list_titles"
        android:entryValues="@array/pref_theme_list_titles"
        android:key="theme_list"
        android:negativeButtonText="@null"
        android:positiveButtonText="@null"
        android:title="@string/pref_title_select_theme" />


    <ListPreference
        android:defaultValue="18"
        android:entries="@array/pref_font_size_list_titles"
        android:entryValues="@array/pref_font_size_list_values"
        android:key="font_size_list"
        android:negativeButtonText="@null"
        android:positiveButtonText="@null"
        android:title="@string/pref_title_select_font_size" />






</PreferenceScreen>